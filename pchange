#remove python3.9
sudo apt-get remove python3.9 -y
sudo apt-get remove --auto-remove python3.9 -y
sudo apt-get purge python3.9 -y
sudo apt-get purge --auto-remove python3.9 -y
ls /usr/bin/python*

#install python 3.8
sudo apt-get update
sudo apt install python3.8
sudo update-alternatives --install /usr/bin/python python /usr/bin/python3.8 10

